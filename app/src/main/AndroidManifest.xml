        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="true"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".editor.photoediting.PhotoApp"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CustomGallery"
        tools:ignore="HardcodedDebugMode">
        <activity
            android:name=".StickersActivity"
            android:exported="false" />
        <activity
            android:name=".editor.photoediting.EditImageActivity"
            android:exported="true">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".EditMainActivity"
            android:exported="false" />
        <activity
            android:name=".filters.HistoActivity"
            android:exported="true" />
        <activity
            android:name=".filters.FilterActivity"
            android:exported="true">
            <!--            <intent-filter>-->
            <!--                <action android:name="android.intent.action.MAIN" />-->

            <!--                <category android:name="android.intent.category.LAUNCHER" />-->
            <!--            </intent-filter>-->
        </activity>
        <activity
            android:name=".croppy.croppylib.main.CroppyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gallery.all_pictures_and_albums.AlbumsListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".crop.MyCropActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gallery.all_pictures_and_albums.AllPicturesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.drudotstech.ViewImageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".crop.CropImageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectMediaActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gallery.album_only.AlbumsActivity" />
        <activity android:name=".gallery.album_only.AlbumPicturesActivity" />
