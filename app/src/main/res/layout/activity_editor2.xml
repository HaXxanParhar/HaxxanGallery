<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp">

        <RelativeLayout
            android:id="@+id/main_action_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="@dimen/_2sdp"
            android:visibility="visible"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_album"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/metropolis_semi_bold"
                android:gravity="center"
                android:text="Edit Image"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_action_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/app_background"
            android:elevation="@dimen/_2sdp"
            android:visibility="gone"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_close_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_actionbar_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/metropolis_semi_bold"
                android:gravity="center"
                android:text="Filter"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_check"
                android:drawableTint="@color/white"
                android:ellipsize="marquee"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_blurred_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_bottom"
        android:layout_below="@id/toolbar"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/rl_canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"></RelativeLayout>


    <ImageView
        android:id="@+id/iv_original_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_bottom"
        android:layout_below="@id/toolbar"
        android:adjustViewBounds="true"
        android:alpha="0" />


    <ImageView
        android:id="@+id/btn_show"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_above="@id/rl_bottom"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_24sdp"
        android:background="@drawable/bg_grey_circle"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/edited_image"
        app:tint="@color/white" />


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_72sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:visibility="visible"
            android:weightSum="5">

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_appply_filter" />

            <ImageView
                android:id="@+id/iv_adjust"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_brightness" />


            <ImageView
                android:id="@+id/iv_stickers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_stickers"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/iv_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_text" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_adjust" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_adjust"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/app_background"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:visibility="gone"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_brightness"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bright"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_bright" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Brightness"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contrast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_contrast" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Contrast"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_saturation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_saturation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Saturation"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_warmth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_hue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/metropolis_medium"
                    android:text="Warmth"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/metropolis_medium"
                android:text="50"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />


            <com.google.android.material.slider.Slider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stepSize="1.0"
                android:value="50.0"
                android:valueFrom="0.0"
                android:valueTo="100.0"
                app:thumbColor="@color/white"
                app:thumbRadius="@dimen/_10sdp"
                app:thumbStrokeColor="@color/app_color"
                app:thumbStrokeWidth="@dimen/_3sdp"
                app:trackColorActive="@color/white"
                app:trackColorInactive="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_stickers"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_centerVertical="true"
            android:background="@color/app_background"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:visibility="gone"
            android:weightSum="3">

            <ImageView
                android:id="@+id/iv_doodle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/doodle"
                app:tint="@color/white" />


            <ImageView
                android:id="@+id/iv_sticker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_stickers"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/iv_emoji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/happy"
                app:tint="@color/white" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_filters"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_72sdp"
            android:background="@color/app_background"
            android:visibility="gone"
            tools:listitem="@layout/design_filter" />

    </RelativeLayout>

    <include layout="@layout/loading_main" />

</RelativeLayout>