<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <RelativeLayout
            android:id="@+id/main_action_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="@dimen/_2sdp"
            android:visibility="gone"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/metropolis_semi_bold"
                android:gravity="center"
                android:text="Edit Image"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_action_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/app_background"
            android:elevation="@dimen/_2sdp"
            android:visibility="visible"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_close_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_actionbar_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/metropolis_semi_bold"
                android:gravity="center"
                android:text="Add Sticker"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_check"
                android:drawableTint="@color/white"
                android:ellipsize="marquee"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_blurred_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_bottom"
        android:layout_below="@id/toolbar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_original_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_bottom"
        android:layout_below="@id/toolbar"
        android:adjustViewBounds="true" />

    <com.drudotstech.customgallery.editor.photoeditor.PhotoEditorView
        android:id="@+id/photoEditorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_bottom"
        android:layout_below="@id/toolbar"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/btn_show"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_above="@id/rl_bottom"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_24sdp"
        android:background="@drawable/bg_grey_circle"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/edited_image"
        app:tint="@color/white" />


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_72sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:visibility="visible"
            android:weightSum="3">

            <ImageView
                android:id="@+id/iv_doodle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/doodle"
                app:tint="@color/white" />


            <ImageView
                android:id="@+id/iv_stickers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_stickers"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/iv_emoji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/happy"
                app:tint="@color/white" />


        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/loading_main" />

</RelativeLayout>